@model IDictionary<string, string>
@{
    ViewData["Title"] = "Операция банка";
}
<h1>@ViewData["Title"]</h1>


<form id='payment_form' action="@BankEnvironment.bankUrl" method = "POST">
@foreach (var item in Model)
{
        <input type='hidden' name='@item.Key.ToUpper()' value='@item.Value' />
}
    <input type="submit" name="SUBMIT" value="Перейти к оплате" />
</form>
